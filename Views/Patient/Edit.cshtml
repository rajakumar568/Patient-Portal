
@{
}
@model Patient_Portal.Models.Entity.Patient;

<h1>Edit Patient Details</h1>

@if (Model is null)
{
    <p>No Patient is there with this id.</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="Phone" />
        </div>
        <div class="mt-3">
            <label class="form-label">Age</label>
            <input type="number" class="form-control" asp-for="Age" />
        </div>
        <div class="mt-3">
            <label class="form-label">Department</label>
            <input type="text" class="form-control" asp-for="Department" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Patient">Delete</button>
        </div>
    </form>

}

